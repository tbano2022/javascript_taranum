//array
const myArr = [0,1,2]
// console.log(myArr[0]);
// myArr.unshift(9)
// console.log(myArr);

//slice, splice
console.log("A", myArr);
const myn1 =  myArr.slice(0,2)
console.log(myn1)
console.log("B", myArr);

//slice do not affect the original array but splice affect the original array , it takes out the part from orinal array that was spliced.
//push change the original array to include the new value in the last, concat method on the other hand make a new array with the individual elements added as new elemntrs to the array
console.log(myArr.push(myn1))
mynewarr = myArr.concat(myn1)
console.log (mynewarr)
exArr = [1,2,3,4]
console.log(...exArr);   //spread the array ellements out of array
badarr =[ 1,2,[3,4,[5,6]],7]
console.log(badarr.flat());
console.log(Array.isArray(badarr))  //checking if the passed value is an array
console.log (Array.from("Hitesh")); //creating an array from string
console.log(Array.from({ name: "Hitesh" }))  // results in an empty array, 

let score1 =100
let score2 =200
let score3 =300

console.log(Array.of(score1,score2,score3)) // converts variables into array

